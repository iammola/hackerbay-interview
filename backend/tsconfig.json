{
  "compilerOptions": {
    "target": "es6",
    "module": "es2020",
    "lib": ["esnext"],
    "allowJs": true,
    "strict": true,
    "outDir": "build",
    "rootDir": "src",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
