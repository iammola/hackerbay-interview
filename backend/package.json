{
  "name": "hackerbay-interview-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "tsc && node --experimental-specifier-resolution=node build/server",
    "dev": "nodemon"
  },
  "eslintIgnore": [
    "node_modules/*",
    "build/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/restify": "^8.5.4",
    "@types/restify-cookies": "^0.2.8",
    "@types/sharp": "^0.29.5",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "tsconfig.json",
      "package.json"
    ],
    "ext": ".ts,.js",
    "exec": "node --loader ts-node/esm --experimental-specifier-resolution=node src/server"
  },
  "dependencies": {
    "got": "^12.0.1",
    "http-status-codes": "^2.2.0",
    "jose": "^4.5.0",
    "jsonpatch": "^3.1.0",
    "restify": "^8.6.1",
    "restify-cookies": "^0.2.6",
    "sharp": "^0.30.1"
  }
}
