{
  "name": "hackerbay-interview-backend",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "tsc && node build/server.js",
    "dev": "nodemon"
  },
  "eslintIgnore": [
    "node_modules/*",
    "build/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.18",
    "nodemon": "^2.0.15",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts,.js",
    "exec": "ts-node ./src/server.ts"
  }
}
